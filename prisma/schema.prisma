// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WordPosition {
  id               Int            @id @default(autoincrement())
  wordOccurrence   WordOccurrence @relation(fields: [wordOccurrenceId], references: [id])
  wordOccurrenceId Int
  position         Int
  BowVector        BowVector?     @relation(fields: [bowVectorId], references: [id])
  bowVectorId      Int?
}

model WordOccurrence {
  id           Int            @id @default(autoincrement())
  bowVector    BowVector      @relation(fields: [bowVectorId], references: [id])
  bowVectorId  Int
  frequency    Int
  chapter      Int
  verse        Int
  // You can remove the "position" field from this table
  WordPosition WordPosition[]
}

model BowVector {
  id                  Int                  @id @default(autoincrement())
  word                String
  totalOccurrences    Int
  positions           WordPosition[]
  WordTotalOccurrence WordTotalOccurrence?
  WordOccurrence      WordOccurrence[]
}

model WordTotalOccurrence {
  id               Int       @id @default(autoincrement())
  wordId           Int       @unique
  totalOccurrences Int
  word             BowVector @relation(fields: [wordId], references: [id])
}
